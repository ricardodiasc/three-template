    "json-loader": "^0.5.7",
    "rimraf": "^2.6.3",
    "ts-loader": "^5.3.3",
    "typescript": "^3.8.3",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3"
  },
  "dependencies": {
    "three": "^0.125.0",
    "three-stats": "^1.0.1"
  }
}
