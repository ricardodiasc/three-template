{
  "name": "three-template",
  "version": "1.1.0",
  "description": "Threejs startup template with Typescript",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist",
    "start": "webpack-dev-server --port 3000 --inline --hot --content-base dist/",
